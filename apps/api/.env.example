# Server
PORT=3000
NODE_ENV=development

# Database Configuration (Should match packages/database/.env)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bms?schema=public
DATABASE_POOL_MAX=25
DATABASE_IDLE_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=10000
DATABASE_QUERY_TIMEOUT=30000
DEBUG_PRISMA=false

# Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Twilio (for SMS OTP)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_CLUSTER_ENABLED=false
REDIS_CLUSTER_NODES=redis-node-1:6379,redis-node-2:6379,redis-node-3:6379
REDIS_KEY_PREFIX=bms:
REDIS_DEFAULT_TTL=3600

# Cache TTLs (in seconds)
CACHE_SHOW_TTL=3600
CACHE_VENUE_TTL=7200
CACHE_CATEGORY_TTL=86400
CACHE_SEAT_TTL=60

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
RATE_LIMIT_HEADERS=true

# Logging
LOG_LEVEL=info
LOG_MAX_FILES=14d

# Queue Settings
QUEUE_CONCURRENCY=10 

# Database Connection (From packages/database/.env)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bms?schema=public

# Database Performance Settings
DATABASE_POOL_MAX=25
DATABASE_IDLE_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=10000
DATABASE_QUERY_TIMEOUT=30000
DEBUG_PRISMA=false 